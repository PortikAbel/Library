<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head.ejs', { title: 'Registered books'}) %>
    <body>
        <%- include('partials/navbar.ejs') %>
        
        <% if (books.length) { %>
            <table>
                <thead>
                    <tr>
                        <th>ISBN</th>
                        <th>Title (click for summary)</th>
                        <th>Author</th>
                        <th>Release date</th>
                        <th>Number of copies</th>
                        <th>Cover</th>
                    </tr>
                </thead>
                <tbody>
                    <% books.forEach((book) => { %>
                        <tr>
                            <td><a class="id" href="/books/<%= book._id %>/rents"><%= book._id %></a></td>
                            <td onclick="getSummary(this.parentNode)"><%= book.title %></td>
                            <td><%= book.author %></td>
                            <td><%= book.releasedate %></td>
                            <td><%= book.copies %></td>
                            <td>
                                <img src="/<%= book.imageName %>" alt="<%= book.imageName %>" height="100">
                            </td>
                            <td>
                                <img src="delete.png" alt="delete" height="50" 
                                onclick="deleteRow(this.parentNode.parentNode)">
                            </td>
                        </tr>
                        <tr>
                            <td class="summary" colspan="6"></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>No books to show</p>
        <% } %>

        <script src="table_update.js"></script>
    </body>
</html>